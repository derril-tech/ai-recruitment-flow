# Backend Environment Variables
# Copy this file to .env and fill in your values

# Application
APP_NAME="Recruitment Flow API"
APP_VERSION="1.0.0"
ENVIRONMENT="development"
DEBUG=true
LOG_LEVEL="DEBUG"

# Server
HOST="0.0.0.0"
PORT=8000
WORKERS=1

# Security
SECRET_KEY="your-super-secret-key-change-in-production"
JWT_SECRET="your-jwt-secret-key-change-in-production"
JWT_ALGORITHM="HS256"
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Database
DATABASE_URL="postgresql+asyncpg://postgres:password@localhost/recruitment_flow_dev"
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis
REDIS_URL="redis://localhost:6379/0"
REDIS_POOL_SIZE=10

# AI Services
OPENAI_API_KEY="your-openai-api-key"
ANTHROPIC_API_KEY="your-anthropic-api-key"
OPENAI_MODEL="gpt-4"
ANTHROPIC_MODEL="claude-3-sonnet-20240229"

# Vector Database
CHROMA_HOST="localhost"
CHROMA_PORT=8000
CHROMA_COLLECTION_NAME="recruitment_docs"

# File Storage (AWS S3)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
STORAGE_BUCKET="recruitment-flow-storage"
STORAGE_REGION="us-east-1"

# Email (SMTP)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USERNAME="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_USE_TLS=true

# Calendar Integrations
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
MICROSOFT_CLIENT_ID="your-microsoft-client-id"
MICROSOFT_CLIENT_SECRET="your-microsoft-client-secret"

# ATS Integrations
GREENHOUSE_API_KEY="your-greenhouse-api-key"
LEVER_API_KEY="your-lever-api-key"
WORKDAY_CLIENT_ID="your-workday-client-id"
WORKDAY_CLIENT_SECRET="your-workday-client-secret"

# Monitoring
SENTRY_DSN="your-sentry-dsn"
PROMETHEUS_ENABLED=true

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# CORS
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8000"]
ALLOWED_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
ALLOWED_HEADERS=["*"]

# File Upload
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=["pdf", "docx", "doc", "txt", "jpg", "jpeg", "png"]
